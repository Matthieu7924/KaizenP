{% extends 'base.html.twig' %}

{% block title %}Liste des produits
	{{ categorie.nom }}
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		{% if categorie %}
			<h1>Liste des produits de la catégorie
				{{ categorie.nom }}
				✅</h1>

			{% if produits is not empty %}
				<ul>
					{% for produit in produits %}
						<div class="col-3">
							<article class="card">
								<div class="card-body">
									<h2 class="card-title">
										{{ produit.nom }}
									</h2>
									<p class="card-text">
										{{ produit.description }}
									</p>
									<p class="card-text">
										{{ produit.prix }}
									</p>
									<a href="#" class="btn btn-primary">Détails</a>
								</div>
							</article>
						</div>
					{% endfor %}
				</ul>
			{% else %}
				<p>Aucun produit trouvé dans cette catégorie.</p>
			{% endif %}
		{% else %}
			<p>Catégorie non trouvée</p>
		{% endif %}
	</div>
{% endblock %}
