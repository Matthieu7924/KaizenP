{% extends 'base.html.twig' %}

{% block title %}Inscription
{% endblock %}

{% block body %}
	<section class="container">
		<div class="row">
			<div class="col">
				{{ form_errors(registrationForm) }}
				<h1>Inscription</h1>
				{{ form_start(registrationForm) }}
                <fieldset class="mb-3" 
                >
                    <legend>Mon identité</legend>
                    {{ form_row(registrationForm.nom) }}
                    {{ form_row(registrationForm.prenom) }}
                    {{ form_row(registrationForm.email) }}
                </fieldset>
                <fieldset class="mb-3" 
                >
                <legend>Mes corrdonnées</legend>
                    {{ form_row(registrationForm.adresse) }}
                    {{ form_row(registrationForm.cp) }}
                    {{ form_row(registrationForm.ville) }}
                </fieldset>
				{{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
				{{ form_row(registrationForm.RGPDConsent) }}

				<button type="submit" class="my-3 btn btn-primary">M'inscrire</button>
				{{ form_end(registrationForm) }}
			</div>
		</div>
	</section>


{% endblock %}
