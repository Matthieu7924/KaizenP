{# Votre template Twig #}
{% extends 'base.html.twig' %}

{% block title %}Ajouter un Produit{% endblock %}

{% block body %}
    <div class="container">
        <h1>Ajouter un Produit</h1>

        {{ form_start(form, {'enctype': 'multipart/form-data', 'attr': {'class': 'form'}}) }}

        <div class="mb-3">
            {{ form_row(form.nom, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">a
            {{ form_row(form.description, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            {{ form_row(form.prix, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            {{ form_row(form.stock, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            {{ form_row(form.categorie, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            {# Utilisez form_widget pour afficher le champ de fichier correctement #}
            {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="mb-3">
            {{ form_row(form.slug, {'attr': {'class': 'form-control'}}) }}
        </div>

        <button type="submit" class="btn btn-primary">Ajouter</button>

        {{ form_end(form) }}
    </div>
{% endblock %}
