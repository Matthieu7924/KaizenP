{% extends 'base.html.twig' %}

{% block title %}Ajouter un Produit{% endblock %}

{% block body %}
    <h1>Ajouter un Produit</h1>

    {{ form_start(form) }}

    {{ form_row(form.nom) }}
    {{ form_row(form.description) }}
    {{ form_row(form.prix) }}

    <button type="submit" class="btn btn-primary">Ajouter</button>

    {{ form_end(form) }}
{% endblock %}
